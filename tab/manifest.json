{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "version": "1.0.4",
	"default_locale": "en",
    "description": "__MSG_appDesc__",
	"chrome_url_overrides" : {
		"newtab": "html/1/background.html"
	},
	"permissions": [
		"tabs",
    	"http://*.happyhey.com/",
		"https://*.happyhey.com/",
		"chrome://favicon/"
	],
	"content_scripts": [
		{
		"matches": [
			"https://happyhey.com/*",
			"https://www.happyhey.com/*"
			],
		"js": ["js/extension-check.js"],
		"run_at": "document_end"
		}
	],	
	"icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://happyhey.com https://www.happyhey.com; object-src 'self'",
	"short_name": "__MSG_appName__"
}